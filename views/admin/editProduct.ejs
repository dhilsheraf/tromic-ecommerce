        <section class="content-main">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2 class="content-title">Edit Product</h2>
                        </div>
                        <div class="col-12">
                            <div class="card mb-4">
                                <div class="card-body">

                                    <form id="product-form" action="/admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
                                        <input type="hidden" name="product_id" value="<%= product._id %>">
                                        
                                        <div class="product-form">
                                            <label for="product_name" class="form-label">Product Title</label>
                                            <input type="text" placeholder="Type here" class="form-control" id="product_name" name="name" required value="<%= product.name %>" />
                                        </div>

                                        <div class="product-form">
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" class="form-control" rows="4" name="description" required><%= product.description %></textarea>
                                        </div> 

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="product-form">
                                                    <label class="form-label">Regular Price</label>
                                                    <input type="text" id="price" placeholder="" class="form-control" name="price" required value="<%= product.price %>" />
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="product-form">
                                                    <label class="form-label">Stock Quantity</label>
                                                    <input type="number" class="form-control" name="stock" min="0" required value="<%= product.stock %>" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="product-form">
                                            <label class="form-label">Category</label>
                                            <select class="form-select" name="category" required>
                                                <% categories.forEach(category => { %>
                                                    <option value="<%= category._id %>" <%= product.category === category._id ? 'selected' : '' %>><%= category.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>

                                        <div class="product-form">
                                            <label class="form-label" style="color: rgb(0, 0, 0);">Product Images 4</label>
                                            <div class="row">
                                                <% for (let i = 0; i < 4; i++) { %>
                                                    <div class="col-lg-3">
                                                        <label class="form-label" style="color: black;"><%= i === 0 ? 'Display image' : 'Other images' %></label>
                                        
                                                        <!-- Display the existing image if available -->
                                                        <% if (product.images[i]) { %>
                                                            <img src="<%= product.images[i] %>" class="image-preview" />
                                                            <!-- Hidden field to pass the current image URL to the back-end -->
                                                            <input type="hidden" name="existingImages[]" value="<%= product.images[i] %>">
                                                        <% } else { %>
                                                            <!-- Empty hidden input if thereâ€™s no image -->
                                                            <input type="hidden" name="existingImages[]" value="">
                                                        <% } %>
                                        
                                                        <!-- Input for uploading a new image -->
                                                        <input type="file" class="form-control" name="images" data-index="<%= i %>" onchange="previewImage(event, <%= i %>)" />
                                                        <div id="image-preview-container-<%= i %>" class="image-preview-container"></div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                        

                                        <div class="text-center">
                                            <br>
                                            <button type="submit" class="btn btn-submit rounded font-sm hover-up">Update Product</button>
                                            <a href="/admin/products" class="btn btn-submit rounded font-sm hover-up">Back</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
