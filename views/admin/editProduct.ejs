<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Edit Product</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg" />
    <link href="/assets/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
    <style>
        .form-container {
            width: 80%;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
            color: #333;
        }
        .form-container label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }
        .form-container input, .form-container textarea, .form-container select {
            width: 100%;
            padding: 10px;
            margin-top: 8px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1em;
        }
        .form-container .btn-submit {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
            width: 100%;
        }
        .form-container .btn-submit:hover {
            background-color: #45a049;
        }
        .image-preview {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
            margin-top: 10px;
            display: block;
        }
        #image-preview-container {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 10px;
        }
        .btn-back {
            background-color: #45a049;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            border: none;
            width: 100%;
            margin-bottom: 10px;
        }
        .btn-back:hover {
            background-color: #4CAF50;
        }

    </style>
</head>
<body>

    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <!-- Navbar Content -->
        <div class="aside-top">
            <a href="/admin/dashboard" class="brand-wrap">
                <img src="/assets/imgs/theme/logo.svg" class="logo" alt="Nest Dashboard" />
            </a>
            <button class="btn btn-icon btn-aside-minimize">
                <i class="text-muted material-icons md-menu_open"></i>
            </button>
        </div>

        <!-- Sidebar Menu -->
        <nav>
            <ul class="menu-aside">
                <li class="menu-item"><a class="menu-link" href="/admin/dashboard">
                    <i class="icon material-icons md-home"></i>
                     <span class="text">Dashboard</span>
                    </a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/users">
                    <i class="icon material-icons md-person"></i> 
                    <span class="text">Users</span>
                </a></li>
                <li class="menu-item active"><a class="menu-link" href="/admin/product">
                    <i class="icon material-icons md-add_box"></i> 
                    <span class="text">Products</span>
                </a></li>
                <li class="menu-item"><a class="menu-link" href="/admin/category">
                    <i class="icon material-icons md-store"></i>
                     <span class="text">Category</span>
                    </a></li>
                <li class="menu-item ">
                    <a class="menu-link" href="">
                        <i class="icon material-icons md-add_box"></i>
                        <span class="text">pruct</span>
                    </a>
                   
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="#">
                        <i class="icon material-icons md-monetization_on"></i>
                        <span class="text">Transactions</span>
                    </a>
                   
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="#">
                        <i class="icon material-icons md-person"></i>
                        <span class="text">Account</span>
                    </a>
                   
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="#">
                        <i class="icon material-icons md-comment"></i>
                        <span class="text">Reviews</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="#"> <i class="icon material-icons md-stars"></i> 
                        <span class="text">Brands</span>
                     </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" disabled href="#">
                        <i class="icon material-icons md-pie_chart"></i>
                        <span class="text">Statistics</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>


    <main class="main-wrap">
        <header class="main-header navbar">
            <!-- Navbar Content -->
        </header>
        <section class="content-main">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2 class="content-title">Edit Product</h2>
                        </div>
                        <div class="col-lg-9">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <form id="product-form" action="/admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
                                        <!-- Product Title -->
                                        <div class="product-form">
                                            <label for="product_name" class="form-label">Product Title</label>
                                            <input type="text" placeholder="Type here" class="form-control" id="product_name" name="name" value="<%= product.name %>" required />
                                        </div>

                                        <!-- Description -->
                                        <div class="product-form">
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" class="form-control" rows="4" name="description" required><%= product.description %></textarea>
                                        </div> 

                                        <!-- Price and Stock Quantity -->
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="product-form">
                                                    <label class="form-label">Regular Price</label>
                                                    <input type="text" id="price" placeholder="" class="form-control" name="price" value="<%= product.price %>" required />
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="product-form">
                                                    <label class="form-label">Stock Quantity</label>
                                                    <input type="number" class="form-control" name="stock" value="<%= product.stock %>" min="0" required />
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Category -->
                                        <div class="product-form">
                                            <label class="form-label">Category</label>
                                            <select class="form-select" name="category" required>
                                                <% categories.forEach(category => { %>
                                                    <option value="<%= category._id %>" <%= category._id === product.category ? 'selected' : '' %>><%= category.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>

                                        <!-- Product Images -->
                                        
                                        <!-- Primary Image Section -->
<div class="form-group">
    <label for="primaryImage">Primary Image</label>
    <input type="file" class="form-control" name="primaryImage" onchange="previewPrimaryImage(event)" />

    <% if (product.primaryImage) { %>
        <div>
            <label>Existing Primary Image:</label>
            <img src="<%= product.primaryImage %>" id="primaryImagePreview" alt="Primary Image" style="max-width: 200px; margin-top: 10px;" />
        </div>
    <% } else { %>
        <img src="" id="primaryImagePreview" alt="Primary Image Preview" style="max-width: 200px; display: none; margin-top: 10px;" />
    <% } %>
</div>

<!-- Additional Images Section (3 Inputs) -->
<div class="form-group">
    <label for="additionalImages">Additional Images</label>

    <!-- Input 1 -->
    <input type="file" class="form-control" name="additionalImages" onchange="previewAdditionalImage(event, 1)" />
    <% if (product.additionalImages && product.additionalImages[0]) { %>
        <div>
            <label>Existing Additional Image 1:</label>
            <img src="<%= product.additionalImages[0] %>" id="additionalImagePreview1" class="image-preview" style="max-width: 100px; margin-top: 10px;" />
        </div>
    <% } %>

    <!-- Input 2 -->
    <input type="file" class="form-control" name="additionalImages" onchange="previewAdditionalImage(event, 2)" />
    <% if (product.additionalImages && product.additionalImages[1]) { %>
        <div>
            <label>Existing Additional Image 2:</label>
            <img src="<%= product.additionalImages[1] %>" id="additionalImagePreview2" class="image-preview" style="max-width: 100px; margin-top: 10px;" />
        </div>
    <% } %>

    <!-- Input 3 -->
    <input type="file" class="form-control" name="additionalImages" onchange="previewAdditionalImage(event, 3)" />
    <% if (product.additionalImages && product.additionalImages[2]) { %>
        <div>
            <label>Existing Additional Image 3:</label>
            <img src="<%= product.additionalImages[2] %>" id="additionalImagePreview3" class="image-preview" style="max-width: 100px; margin-top: 10px;" />
        </div>
    <% } %>
</div>


                                        <!-- Submit Buttons -->
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-submit rounded font-sm hover-up">Update Product</button>
                                            <a href="/admin/products" class="btn btn-submit rounded font-sm hover-up">Back</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

<footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
        <div class="col-sm-6">
            <script>
                document.write(new Date().getFullYear());
            </script>
            &copy; Nest - HTML Ecommerce Template .
        </div>
        <div class="col-sm-6">
            <div class="text-sm-end">All rights reserved</div>
        </div>
    </div>
</footer>

<script>
    // Image preview function
    function previewImage(event, index) {
        const reader = new FileReader();
        reader.onload = function () {
            const imageElements = document.querySelectorAll('.image-preview');
            imageElements[index].src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

<script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
<script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
<script src="/assets/js/vendors/select2.min.js"></script>
<script src="/assets/js/vendors/perfect-scrollbar.js"></script>
<script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
<script src="/assets/js/main.js?v=1.1" type="text/javascript"></script>

</body>

<script>
    // Preview for Primary Image
    function previewPrimaryImage(event) {
        const output = document.getElementById('primaryImagePreview');
        output.src = URL.createObjectURL(event.target.files[0]);
        output.style.display = 'block';
    }

    // Preview for Additional Images
    function previewAdditionalImage(event, index) {
        const output = document.getElementById('additionalImagePreview' + index);
        output.src = URL.createObjectURL(event.target.files[0]);
        output.style.display = 'block';
    }
</script>

</html>
