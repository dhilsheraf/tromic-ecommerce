<script>
    // Preview for Primary Image
    function previewPrimaryImage(event) {
        const output = document.getElementById('primaryImagePreview');
        output.src = URL.createObjectURL(event.target.files[0]);
        output.style.display = 'block';
    }

    // Preview for Additional Images
    function previewImage(event, index) {
        const output = document.getElementById(`image-preview-container-${index}`);
        const img = document.createElement('img');
        img.src = URL.createObjectURL(event.target.files[0]);
        img.classList.add('image-preview');
        
        // Clear previous image and append new preview
        output.innerHTML = '';
        output.appendChild(img);
        output.style.display = 'block';
    }


</script>

