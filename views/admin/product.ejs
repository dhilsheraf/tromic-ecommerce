                    <div class="card-body">
    <div class="table-responsive">
        <div class="container">
            <h1>Product List</h1>

            <!-- Button to add a new product -->
            <div style="margin-bottom: 20px;">
                <a href="/admin/products/add" class="btn btn-submit">Add New Product</a>
            </div>

            <!-- Product Grid -->
            <div class="product-grid">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <!-- Display first image if available -->
                        <% if (product.images) { %>
                            <div class="image-container">
                                <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="product-image">
                            </div>
                        <% } else { %>
                            <div class="image-container">
                                <img src="/assets/imgs/no-image.jpg" alt="No Image Available" class="product-image">
                            </div>
                        <% } %>

                        <!-- Product details -->
                        <div class="product-details">
                            <h3 class="product-name"><%= product.name %></h3>
                            <p class="price">â‚¹<%= product.price.toFixed(2) %></p>
                            <p class="description">Stock : <%= product.stock %></p>
                            <p class="category">Category: <%= product.category.name %></p>
                        </div>

                        <!-- Actions (Edit, Soft Delete) -->
                        <div class="actions">
                            <a href="/admin/products/edit/<%= product._id %>/" class="btn btn-edit">Edit</a>
                            <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;">
                                <!-- Confirmation before deletion -->
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Message if no products found -->
            <% if (products.length === 0) { %>
                <p>No products available.</p>
            <% } %>
        </div>
    </div>
